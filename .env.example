###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=CHANGE_ME_TO_RANDOM_STRING
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost:8080
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Database connection URL
# For Docker: postgresql://app:app_password@db:5432/app?serverVersion=16&charset=utf8
# For local:  postgresql://user:password@127.0.0.1:5432/dbname?serverVersion=16&charset=utf8
DATABASE_URL="postgresql://app:app_password@db:5432/app?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
# Passphrase for JWT private key
# Generate random passphrase with: openssl rand -hex 32
JWT_PASSPHRASE=CHANGE_ME_TO_RANDOM_STRING
#
# Generate JWT keys with: php bin/console lexik:jwt:generate-keypair
# Docker generates keys automatically on first run.
###< lexik/jwt-authentication-bundle ###

###> symfony/lock ###
LOCK_DSN=flock
###< symfony/lock ###
